{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/spotify/callback",
        "function": "spotifyCallback"
      },
      {
        "source": "/api/spotify/",
        "function": "spotifyAuth"
      },      
      {
        "source": "/api/spotify/Refresh",
        "function": "spotifyRefresh"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ]
}
